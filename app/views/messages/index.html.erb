<script id="current_user" type="text/json">
  <%= current_user.email %>
</script>

<div id="chatbox">
  <h3>Chat Room</h3>
  <ul id="chat">
    <% if @messages.count <= 10 %>
      <%= render @messages %>
    <% else %>
      <%= render @messages[-10..-1] %>
    <% end %>
  </ul>

  <%= form_for Message.new, :remote => true do |f| %>
    <%= f.text_field :content %>
    <%= f.submit "Send" %>
  <% end %>
</div>

<div id="membersbox">
  <h3>Users Present</h3>
</div>

<div class="game-buttons">
  <h3>Play Games</h3>
  <%= button_to "Play Snake", game_playsnake_url, :method => "get" %>
  <%= button_to "Play Asteroids", game_playasteroids_url, :method => "get" %>
</div>